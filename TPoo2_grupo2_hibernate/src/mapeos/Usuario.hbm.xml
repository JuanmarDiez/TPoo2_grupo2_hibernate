<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.Usuario" table="usuario">
		<id column="idUsuario" name="idUsuario">
			<generator class="identity" />
		</id>
		<property name="email" column="email" type="string" />
		<property name="contrasena" column="contrasena" type="string" />
		<property name="nombre" column="nombre" type="string" />
		<property name="apellido" column="apellido" type="string" />
		<property name="dni" column="dni" type="int" />
		<property name="tipo" column="tipo" type="string" />
		
		<joined-subclass name="datos.Cliente" table="cliente">
			<key column="idCliente" />
			<property column="nroCliente" name="nroCliente" type="int" />
			
			<!-- Conexion entre turno y cliente uno a muchos -->
			<set name="turnos" table="turno" order-by="idTurno asc" inverse="true" lazy="true" fetch="select">
				<key column="idCliente" not-null="true" />
				<one-to-many class="datos.Turno" />
			</set>
			
		</joined-subclass>
		
		<joined-subclass name="datos.Empleado" table="empleado">
			<key column="idEmpleado" />
			<property column="legajo" name="legajo" type="int" />
			<property column="fechaDeAlta" name="fechaDeAlta" type="LocalDate" />
			<property column="esActivo" name="esActivo" type="boolean" />
			
			<!-- Conexion entre turno y empleado uno a muchos -->
			<set name="turnos" table="turno" order-by="idTurno asc" inverse="true" lazy="true" fetch="select">
				<key column="idEmpleado" not-null="true" />
				<one-to-many class="datos.Turno" />
			</set>
		</joined-subclass>

		
	</class>
</hibernate-mapping>