<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="datos.Usuario" table="usuario">
		<id column="idUsuario" name="idUsuario">
			<generator class="identity" />
		</id>
		<property name="email" column="email" type="string" />
		<property name="contrasena" column="contrasena" type="string" />
		<property name="nombre" column="nombre" type="string" />
		<property name="apellido" column="apellido" type="string" />
		<property name="dni" column="dni" type="int" />
		
		<joined-subclass name="datos.Cliente" table="cliente">
			<key column="idCliente" />
			<property column="nroCliente" name="nroCliente" type="int" />
		</joined-subclass>

		
	</class>
</hibernate-mapping>